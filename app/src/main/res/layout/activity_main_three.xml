<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.main_activity.view.MainActivity">

    <TextView
        android:id="@+id/textAppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/opacityGreen"
        android:textSize="@dimen/bigAppNameSize"
        android:gravity="center"
        android:paddingLeft="@dimen/smallPadding"
        android:paddingRight="@dimen/smallPadding"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/textSelectCards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_card"
        android:textSize="@dimen/headTextSize"
        android:gravity="center"
        android:textColor="@color/textLightGrayBlue"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="@dimen/smallPadding"/>
    
    <LinearLayout
        android:id="@+id/blockSelectCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/selectCardBlockHeight"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/smallPadding"
        android:paddingLeft="@dimen/verySmallPadding"
        android:paddingRight="@dimen/verySmallPadding"
        app:layout_constraintTop_toBottomOf="@id/textSelectCards">

        <TextView
            android:id="@+id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/reset"
            android:textColor="@color/white"
            android:textSize="@dimen/headSecondTextSize"
            android:gravity="center"
            android:background="@drawable/blue_radius_border"
            android:layout_weight="8"
            android:layout_marginRight="@dimen/verySmallPadding"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:paddingRight="@dimen/verySmallPadding">

            <Spinner
                android:id="@+id/spinnerOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bottom_border"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            
            <ImageView
                android:id="@+id/triangleOne"
                android:layout_width="@dimen/triangleSize"
                android:layout_height="@dimen/triangleSize"
                android:src="@drawable/triangle"
                app:layout_constraintRight_toRightOf="@id/spinnerOne"
                app:layout_constraintBottom_toBottomOf="@id/spinnerOne"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:paddingRight="@dimen/verySmallPadding">

            <Spinner
                android:id="@+id/spinnerTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bottom_border"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/triangleTwo"
                android:layout_width="@dimen/triangleSize"
                android:layout_height="@dimen/triangleSize"
                android:src="@drawable/triangle"
                app:layout_constraintRight_toRightOf="@id/spinnerTwo"
                app:layout_constraintBottom_toBottomOf="@id/spinnerTwo"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:paddingRight="@dimen/verySmallPadding">

            <Spinner
                android:id="@+id/spinnerThree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bottom_border"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/triangleThree"
                android:layout_width="@dimen/triangleSize"
                android:layout_height="@dimen/triangleSize"
                android:src="@drawable/triangle"
                app:layout_constraintRight_toRightOf="@id/spinnerThree"
                app:layout_constraintBottom_toBottomOf="@id/spinnerThree"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9">

            <Spinner
                android:id="@+id/spinnerFour"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bottom_border"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/triangleFour"
                android:layout_width="@dimen/triangleSize"
                android:layout_height="@dimen/triangleSize"
                android:src="@drawable/triangle"
                app:layout_constraintRight_toRightOf="@id/spinnerFour"
                app:layout_constraintBottom_toBottomOf="@id/spinnerFour"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/btnSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/launch"
            android:textColor="@color/white"
            android:textSize="@dimen/headSecondTextSize"
            android:gravity="center"
            android:background="@drawable/blue_radius_border"
            android:layout_weight="8"
            android:layout_marginLeft="@dimen/verySmallPadding"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/blockSelectCard"
        android:layout_marginTop="@dimen/verySmallPadding"
        android:background="@color/grayBlue">

        <LinearLayout
            android:id="@+id/blockByDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_date"
                android:textSize="@dimen/headTextSize"
                android:textColor="@color/white"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/dateFormat"
                android:textColorHint="@color/textLightGrayBlue"
                android:textSize="@dimen/headTextSize"
                android:textColor="@color/yellow"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:background="@drawable/bottom_left_right_border"
                android:paddingLeft="@dimen/smallPadding"
                android:paddingRight="@dimen/smallPadding"
                android:layout_marginBottom="@dimen/smallPadding"/>
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerResult"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/mainBlock"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/smallPadding"/>

    <FrameLayout
        android:id="@+id/blockSelectDate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/blockSelectCard"
            android:background="@color/grayBlue"
            android:paddingTop="@dimen/smallPadding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/select_date"
                    android:textSize="@dimen/headTextSize"
                    android:textColor="@color/white"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/smallPadding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="@string/day"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/headSecondTextSize"
                            android:paddingBottom="@dimen/verySmallPadding"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="@dimen/selectCardBlockHeight"
                            android:layout_height="@dimen/selectCardBlockHeight"
                            android:paddingRight="@dimen/verySmallPadding"
                            android:layout_gravity="center">

                            <Spinner
                                android:id="@+id/spinnerDay"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/spinner_border"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                            <ImageView
                                android:id="@+id/triangleDay"
                                android:layout_width="@dimen/triangleSize"
                                android:layout_height="@dimen/triangleSize"
                                android:src="@drawable/triangle"
                                app:layout_constraintRight_toRightOf="@id/spinnerDay"
                                app:layout_constraintBottom_toBottomOf="@id/spinnerDay"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical">

                                <Switch
                                    android:id="@+id/switchOrder"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="@string/exact_sequence"
                                    android:gravity="center_horizontal"
                                    android:textSize="@dimen/headSecondTextSize"
                                    android:paddingBottom="@dimen/verySmallPadding"/>
                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="@string/month"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/headSecondTextSize"
                            android:paddingBottom="@dimen/verySmallPadding"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/selectCardBlockHeight"
                            android:paddingRight="@dimen/smallPadding"
                            android:paddingLeft="@dimen/smallPadding"
                            android:layout_gravity="center">

                            <Spinner
                                android:id="@+id/spinnerMonth"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/spinner_border"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                            <ImageView
                                android:id="@+id/triangleMonth"
                                android:layout_width="@dimen/triangleSize"
                                android:layout_height="@dimen/triangleSize"
                                android:src="@drawable/triangle"
                                app:layout_constraintRight_toRightOf="@id/spinnerMonth"
                                app:layout_constraintBottom_toBottomOf="@id/spinnerMonth"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/btnAllYear"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/all_year"
                                android:gravity="center"
                                android:textSize="@dimen/headTextSize"
                                android:textColor="@color/white"
                                android:background="@drawable/blue_radius_border"
                                android:layout_margin="@dimen/smallPadding"
                                android:padding="@dimen/smallPadding"
                                android:layout_gravity="center_vertical"/>
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="@string/year"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/headSecondTextSize"
                            android:paddingBottom="@dimen/verySmallPadding"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerYear"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/logoWidth"
                            android:background="@drawable/around_border"
                            android:layout_marginRight="@dimen/smallPadding"
                            android:layout_marginLeft="@dimen/smallPadding"
                            android:layout_marginBottom="@dimen/smallPadding"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/smallPadding">

                    <TextView
                        android:id="@+id/btnCancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cancel"
                        android:textColor="@color/white"
                        android:textSize="@dimen/headTextSize"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/blue_radius_border"
                        android:padding="@dimen/smallPadding"
                        android:layout_marginRight="@dimen/smallPadding"
                        android:layout_marginLeft="@dimen/selectCardBlockHeight"/>

                    <TextView
                        android:id="@+id/btnSave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/save"
                        android:textColor="@color/white"
                        android:textSize="@dimen/headTextSize"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/blue_radius_active_border"
                        android:padding="@dimen/smallPadding"
                        android:layout_marginLeft="@dimen/smallPadding"
                        android:layout_marginRight="@dimen/selectCardBlockHeight"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/blockWait"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/opacityBlack"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <ProgressBar
                android:layout_width="@dimen/selectCardBlockHeight"
                android:layout_height="@dimen/selectCardBlockHeight"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="@dimen/smallPadding"
                android:text="@string/pls_wait"
                android:textColor="@color/green"
                android:textSize="@dimen/underAppNameTextSize"/>
        </LinearLayout>
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/blockAskExit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/centerBlockExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="@dimen/smallPadding"
            android:paddingLeft="@dimen/smallPadding"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/textAskExit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/exit_ask"
                android:textColor="@color/green"
                android:textSize="@dimen/underAppNameTextSize"
                android:gravity="center"
                android:layout_marginTop="@dimen/smallPadding"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/verySmallPadding">

                <TextView
                    android:id="@+id/btnYes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blue_dark_radius_border"
                    android:layout_marginRight="@dimen/verySmallPadding"
                    android:layout_marginTop="@dimen/verySmallPadding"
                    android:text="@string/download"
                    android:textSize="@dimen/textInBox"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:padding="@dimen/paddingInBox"
                    android:breakStrategy="high_quality"/>

                <TextView
                    android:id="@+id/btnNo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blue_dark_radius_border"
                    android:layout_marginLeft="@dimen/verySmallPadding"
                    android:layout_marginTop="@dimen/verySmallPadding"
                    android:text="@string/storage"
                    android:textSize="@dimen/textInBox"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:padding="@dimen/paddingInBox"
                    android:breakStrategy="high_quality"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>