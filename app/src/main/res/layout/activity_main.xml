<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.main_activity.view.MainActivity">

    <TextView
        android:id="@+id/textAppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/opacityGreen"
        android:textSize="@dimen/bigAppNameSize"
        android:gravity="center"
        android:paddingLeft="@dimen/smallPadding"
        android:paddingRight="@dimen/smallPadding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/textSelectCards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_card"
        android:textSize="@dimen/headTextSize"
        android:gravity="center"
        android:textColor="@color/textLightGrayBlue"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="@dimen/smallPadding"/>
    
    <LinearLayout
        android:id="@+id/blockSelectCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/selectCardBlockHeight"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/smallPadding"
        android:paddingLeft="@dimen/verySmallPadding"
        android:paddingRight="@dimen/verySmallPadding"
        app:layout_constraintTop_toBottomOf="@id/textSelectCards">

        <TextView
            android:id="@+id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/reset"
            android:textColor="@color/white"
            android:textSize="@dimen/headSecondTextSize"
            android:gravity="center"
            android:background="@drawable/blue_radius_border"
            android:layout_weight="8"
            android:layout_marginRight="@dimen/verySmallPadding"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:paddingRight="@dimen/verySmallPadding">

            <TextView
                android:id="@+id/spinnerOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bottom_border"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            
            <ImageView
                android:id="@+id/triangleOne"
                android:layout_width="@dimen/triangleSize"
                android:layout_height="@dimen/triangleSize"
                android:src="@drawable/triangle"
                app:layout_constraintRight_toRightOf="@id/spinnerOne"
                app:layout_constraintBottom_toBottomOf="@id/spinnerOne"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:paddingRight="@dimen/verySmallPadding">

            <TextView
                android:id="@+id/spinnerTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bottom_border"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/triangleTwo"
                android:layout_width="@dimen/triangleSize"
                android:layout_height="@dimen/triangleSize"
                android:src="@drawable/triangle"
                app:layout_constraintRight_toRightOf="@id/spinnerTwo"
                app:layout_constraintBottom_toBottomOf="@id/spinnerTwo"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:paddingRight="@dimen/verySmallPadding">

            <TextView
                android:id="@+id/spinnerThree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bottom_border"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/triangleThree"
                android:layout_width="@dimen/triangleSize"
                android:layout_height="@dimen/triangleSize"
                android:src="@drawable/triangle"
                app:layout_constraintRight_toRightOf="@id/spinnerThree"
                app:layout_constraintBottom_toBottomOf="@id/spinnerThree"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9">

            <TextView
                android:id="@+id/spinnerFour"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bottom_border"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/triangleFour"
                android:layout_width="@dimen/triangleSize"
                android:layout_height="@dimen/triangleSize"
                android:src="@drawable/triangle"
                app:layout_constraintRight_toRightOf="@id/spinnerFour"
                app:layout_constraintBottom_toBottomOf="@id/spinnerFour"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/btnSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/launch"
            android:textColor="@color/white"
            android:textSize="@dimen/headSecondTextSize"
            android:gravity="center"
            android:background="@drawable/blue_radius_border"
            android:layout_weight="8"
            android:layout_marginLeft="@dimen/verySmallPadding"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/blockBtnOptions"
        android:layout_width="match_parent"
        android:layout_height="@dimen/selectCardBlockHeight"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/smallPadding"
        android:paddingLeft="@dimen/verySmallPadding"
        android:paddingRight="@dimen/verySmallPadding"
        app:layout_constraintTop_toBottomOf="@id/blockSelectCard">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btnCountGames"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="@string/count_game"
                android:textColor="@color/white"
                android:textSize="@dimen/headThirdTextSize"
                android:gravity="center"
                android:background="@drawable/blue_radius_border"
                android:paddingLeft="@dimen/verySmallPadding"
                android:paddingRight="@dimen/verySmallPadding"/>

        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btnByDate"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="@string/by_date"
                android:textColor="@color/white"
                android:textSize="@dimen/headSecondTextSize"
                android:gravity="center"
                android:layout_gravity="right"
                android:background="@drawable/blue_radius_border"
                android:paddingLeft="@dimen/verySmallPadding"
                android:paddingRight="@dimen/verySmallPadding"/>
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textAppNameSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/green"
        android:textSize="@dimen/headTextSize"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/blockBtnOptions"
        app:layout_constraintBottom_toBottomOf="@id/blockBtnOptions"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/smallPadding"/>
    
    <LinearLayout
        android:id="@+id/blockArrow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/selectCardBlockHeight"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/blockBtnOptions">

        <FrameLayout
            android:id="@+id/btnRight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/right"
                android:layout_marginBottom="@dimen/smallPadding"
                android:padding="@dimen/verySmallPadding"/>

            <View
                android:id="@+id/colorRight"
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallPadding"
                android:background="@color/gray"
                android:layout_gravity="bottom"
                android:tag="right"/>
        </FrameLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <FrameLayout
            android:id="@+id/btnLeft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/left"
                android:layout_marginBottom="@dimen/smallPadding"
                android:padding="@dimen/verySmallPadding"/>

            <View
                android:id="@+id/colorLeft"
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallPadding"
                android:background="@color/gray"
                android:layout_gravity="bottom"
                android:tag="left"/>
        </FrameLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <FrameLayout
            android:id="@+id/btnTop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/top"
                android:layout_marginBottom="@dimen/smallPadding"
                android:padding="@dimen/verySmallPadding"/>

            <View
                android:id="@+id/colorTop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallPadding"
                android:background="@color/gray"
                android:layout_gravity="bottom"
                android:tag="top"/>
        </FrameLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <FrameLayout
            android:id="@+id/btnBottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bottom"
                android:layout_marginBottom="@dimen/smallPadding"
                android:padding="@dimen/verySmallPadding"/>

            <View
                android:id="@+id/colorBottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallPadding"
                android:background="@color/gray"
                android:layout_gravity="bottom"
                android:tag="bottom"/>
        </FrameLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <FrameLayout
            android:id="@+id/btnTopLeft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/top_left"
                android:layout_marginBottom="@dimen/smallPadding"
                android:padding="@dimen/verySmallPadding"/>

            <View
                android:id="@+id/colorTopLeft"
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallPadding"
                android:background="@color/gray"
                android:layout_gravity="bottom"
                android:tag="topLeft"/>
        </FrameLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <FrameLayout
            android:id="@+id/btnBottomLeft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bottom_left"
                android:layout_marginBottom="@dimen/smallPadding"
                android:padding="@dimen/verySmallPadding"/>

            <View
                android:id="@+id/colorBottomLeft"
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallPadding"
                android:background="@color/gray"
                android:layout_gravity="bottom"
                android:tag="bottomLeft"/>
        </FrameLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <FrameLayout
            android:id="@+id/btnBottomRight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bottom_right"
                android:layout_marginBottom="@dimen/smallPadding"
                android:padding="@dimen/verySmallPadding"/>

            <View
                android:id="@+id/colorBottomRight"
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallPadding"
                android:background="@color/gray"
                android:layout_gravity="bottom"
                android:tag="bottomRight"/>
        </FrameLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <FrameLayout
            android:id="@+id/btnTopRight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/top_right"
                android:layout_marginBottom="@dimen/smallPadding"
                android:padding="@dimen/verySmallPadding"/>

            <View
                android:id="@+id/colorTopRight"
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallPadding"
                android:background="@color/gray"
                android:layout_gravity="bottom"
                android:tag="topRight"/>
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/blockArrow"
        android:layout_marginTop="@dimen/verySmallPadding"
        android:background="@color/grayBlue">

        <LinearLayout
            android:id="@+id/blockCountGames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingBottom="@dimen/smallPadding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enter_number"
                android:textSize="@dimen/headTextSize"
                android:textColor="@color/white"
                android:paddingTop="@dimen/smallPadding"
                android:paddingBottom="@dimen/smallPadding"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/verySmallPadding"
                android:paddingRight="@dimen/verySmallPadding">

                <EditText
                    android:id="@+id/editCount1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/headTextSize"
                    android:textColor="@color/yellow"
                    android:background="@drawable/bottom_left_right_border"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/verySmallPadding"
                    android:layout_marginLeft="@dimen/verySmallPadding"
                    android:gravity="center"
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLength="7"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blockByDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/btnResetDateFrom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reset"
                        android:textSize="@dimen/headThirdTextSize"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal|bottom"
                        android:padding="@dimen/verySmallPadding"
                        android:background="@drawable/blue_radius_border"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_date"
                    android:textSize="@dimen/headTextSize"
                    android:textColor="@color/white"
                    android:paddingTop="@dimen/smallPadding"
                    android:paddingBottom="@dimen/smallPadding"
                    android:gravity="center"/>

                <FrameLayout
                    android:id="@+id/btnResetDateTo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reset"
                        android:textSize="@dimen/headThirdTextSize"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal|bottom"
                        android:padding="@dimen/verySmallPadding"
                        android:background="@drawable/blue_radius_border"/>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/verySmallPadding"
                android:paddingRight="@dimen/verySmallPadding"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/btnFrom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/smallPadding"
                    android:paddingTop="@dimen/smallPadding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/from"
                        android:textSize="@dimen/headThirdTextSize"
                        android:textColor="@color/textLightGrayBlue"
                        android:layout_gravity="center_vertical"
                        android:paddingRight="@dimen/verySmallPadding"/>

                    <TextView
                        android:id="@+id/textDateFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/dateFormat"
                        android:textColorHint="@color/textLightGrayBlue"
                        android:textSize="@dimen/headSecondTextSize"
                        android:textColor="@color/yellow"
                        android:gravity="center_vertical"
                        android:background="@drawable/bottom_left_right_border"
                        android:paddingLeft="@dimen/verySmallPadding"
                        android:paddingRight="@dimen/verySmallPadding"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/select_date"
                    android:textSize="@dimen/headTextSize"
                    android:visibility="invisible"/>

                <LinearLayout
                    android:id="@+id/btnTo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/smallPadding"
                    android:paddingTop="@dimen/smallPadding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/to"
                        android:textSize="@dimen/headThirdTextSize"
                        android:textColor="@color/textLightGrayBlue"
                        android:layout_gravity="center_vertical"
                        android:paddingRight="@dimen/verySmallPadding"/>

                    <TextView
                        android:id="@+id/textDateTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/dateFormat"
                        android:textColorHint="@color/textLightGrayBlue"
                        android:textSize="@dimen/headSecondTextSize"
                        android:textColor="@color/yellow"
                        android:gravity="center_vertical"
                        android:background="@drawable/bottom_left_right_border"
                        android:paddingLeft="@dimen/verySmallPadding"
                        android:paddingRight="@dimen/verySmallPadding"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerResult"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/mainBlock"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/smallPadding"/>

    <FrameLayout
        android:id="@+id/blockWait"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/opacityBlack"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <ProgressBar
                android:layout_width="@dimen/selectCardBlockHeight"
                android:layout_height="@dimen/selectCardBlockHeight"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="@dimen/smallPadding"
                android:text="@string/pls_wait"
                android:textColor="@color/green"
                android:textSize="@dimen/underAppNameTextSize"/>
        </LinearLayout>
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/blockAskExit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/centerBlockExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="@dimen/smallPadding"
            android:paddingLeft="@dimen/smallPadding"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/textAskExit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/exit_ask"
                android:textColor="@color/green"
                android:textSize="@dimen/underAppNameTextSize"
                android:gravity="center"
                android:layout_marginTop="@dimen/smallPadding"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/verySmallPadding">

                <TextView
                    android:id="@+id/btnYes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blue_dark_radius_border"
                    android:layout_marginRight="@dimen/verySmallPadding"
                    android:layout_marginTop="@dimen/verySmallPadding"
                    android:text="@string/download"
                    android:textSize="@dimen/textInBox"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:padding="@dimen/paddingInBox"
                    android:breakStrategy="high_quality"/>

                <TextView
                    android:id="@+id/btnNo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blue_dark_radius_border"
                    android:layout_marginLeft="@dimen/verySmallPadding"
                    android:layout_marginTop="@dimen/verySmallPadding"
                    android:text="@string/storage"
                    android:textSize="@dimen/textInBox"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:padding="@dimen/paddingInBox"
                    android:breakStrategy="high_quality"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>